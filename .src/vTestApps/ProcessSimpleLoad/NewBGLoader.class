' Gambas class file

Inherits Task

Public Sub main()

  Dim vmem As New ShmMem(1000000, "jiffy")

  Dim counter As Long = 0

  With vmem
    While True

      .WaitValueChange("Wiggle", counter)
      Inc counter
      If !AllDone = "Yes" Then Break

    Wend
  End With
  Print Application.id;; " Done Counter ="; counter
  Quit

End

